kind: Service # Create new service
apiVersion: v1
metadata:
    name: spring # Name of the service
spec:
    type : LoadBalancer
    selector:
        app: spring # Run on any pod with label - app: myapp
    ports: # Map incoming port to target port
    - name: spring # Setting multiple ports listterns
        - protocol: TCP
          port: 80
          targetPort: 8080